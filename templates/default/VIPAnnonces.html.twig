<div class="top-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2" id="pub">
                <div class="" style="background-color: lightgray;margin-top: -50px;width: 100%;height: calc(100% + 40px);border-radius: 10px;padding: 10px;">
                    <img src="{{ asset(chemin ~ 'template/PiPiece.png') }}" class="img-fluid mx-auto d-block" alt="" style="width: 100%;min-height: 100px; max-height: 100px;object-fit: cover;border-radius: 0px;">
                    <h5 style="text-align: center;">Pi Network</h3>
                    <p>Quelle est la valeur actuelle de Pi Network ?</p>
                </div>
            </div>
            <div class="col-sm-10">
                <div id="carousel-example" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner row w-100 mx-auto" role="listbox">
                        {% set i = 0 %}
                        {% set active = 'active' %}
                        {% for produit in produits %}
                            {% if i != 0 %}
                                {% set active = '' %}
                            {% endif %}
                            <div class="carousel-item col-6 col-sm-4 col-md-3 col-lg-2 col-xl-2 {{active}}" style="border-radius: 10px;padding: 5px;">
                                <div style="border: 1px solid #512c75;width: 100%;overflow: hidden;">
                                    <img src="{{ asset(chemin ~ 'upload/images/' ~ produit.photo) }}" class="img-fluid mx-auto d-block" alt="" style="width: 100%;min-height: 160px; max-height: 160px;object-fit: cover;border-radius: 0px;">
                                    <span style="font-size: 11px;position: absolute;bottom: 45%;padding: 5px;background-color: rgba(0,0,0,0.5);color: white;border-radius: 5px;">{{ produit.prix }} Ï€</span>
                                </div>
                                
                                <span style="font-size: 11px;">{{ produit.nom }}</span>
                            </div>
                            {% set i = i + 1 %}
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</div>